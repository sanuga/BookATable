@model BookATableMVC.ViewModels.Restaurants.RestaurantListViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@Html.ActionLink("Add New", "Edit", "Restaurants");

<form action="\Restaurants\Index">
    <p style="font-weight:bold;">
        Search: @Html.TextBox("SearchString", null, new { @class = "form-control" })
    </p>



    <input type="submit" value="Search" />

</form>


<table class="table">
    <tr>
    <tr>    
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>         
        <th>
            @Html.ActionLink("Address", "Index", new { sortOrder = ViewBag.AddressSortParm })
        </th> 
        <th>Email</th>
        <th>Phone</th>
        <th>
            @Html.ActionLink("Capacity", "Index", new { sortOrder = ViewBag.CapacitySortParm })
        </th> 
        <th>
            @Html.ActionLink("Open Hour", "Index", new { sortOrder = ViewBag.OpenHourSortParm })
        </th>
        <th>
            @Html.ActionLink("Close Hour", "Index", new { sortOrder = ViewBag.CloseHourSortParm })
        </th> 
        <th>Image</th>
        <th>Actions</th>
    </tr>
    

@foreach (var item in Model.Restaurants) {
    <tr>
        <td>@item.Name</td>
        <td>@item.Address</td>
        <td>@item.Email</td>
        <td>@item.Phone</td>
        <td>@item.Capacity</td>
        @if (item.OpenHour.HasValue && item.CloseHour.HasValue)
        {
            <td>@item.OpenHour.Value.ToShortTimeString()</td>
            <td>@item.CloseHour.Value.ToShortTimeString()</td>
        }   

        <td>
            <div class="photo">
                <div class="center">
                  
                    <img class="photo" src="~/Uploads/@item.ImagePath" alt="Image" width="200" height="200"/>  

                </div>
            </div>   
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id}) |
            @Html.ActionLink("Details", "Details", new { id=item.Id}) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id})
        </td>
    </tr>
}

</table>
