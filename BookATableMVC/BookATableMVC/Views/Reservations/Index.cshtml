@model BookATableMVC.ViewModels.Reservations.ReservationListViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
   
    @Html.ActionLink("Create Reservation", "Edit", "Reservations")
      
</p>
<table class="table">
    <tr>
        <th></th>
    </tr>
    <tr>
        <th>PeopleCount</th>
        <th>Comment</th>
        <th>ReservationTime</th>
        <th>Restaurant</th>
       
    </tr>
@foreach (var item in Model.Items) {   
    <tr>
        <td>@item.PeopleCount</td>
        <td>@item.Comment</td>
        <td>@item.ReservationTime</td>
        <td>@item.RestaurantName</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
   
}

</table>
<div>
    @Html.Partial("_PagerPartial", Model.Pager)
</div>

